{% extends "manage/layout/manage.twig" %}
{% block content %}
<div style="padding: 20px;">
    <form action="" method="POST">
        <div>
            <a type="button" href="{{ Url.media('manage/ent') }}" class="close">&times;</a>
            <h4>{{ "Ent edit"|i18n }}</h4>
        </div>
        <div>
            <label for="title">{{ "Title"|i18n }}</label>
            <input type="text" name="title" id="title" class="input-block-level" value="{{ ent.title }}" />
            <input type="hidden" id="language" name="language" value="{{ ent.language }}" />
        </div>
        <div class="modal-footer">
            <button class="btn btn-success">{{ "Save"|i18n }}</button>
            <a href="{{ Url.media('manage/ent') }}" class="btn">{{ "Cancel"|i18n }}</a>
        </div>
    </form>
</div>

{% endblock content %}


<div class="login pull-right">
    <div class="auth">
        {% if not _user %}
            <a href="{{ Url.site('auth/enter') }}" {% if Url.site('auth/enter')==nofollowlink%} class="link active" rel="nofollow"{% endif %}>
                <div {% if Url.site('auth/enter')==nofollowlink%}class="log-in active" rel="nofollow" {% else %} class="log-in"{% endif %}>
                    <span style="padding: 0 0 0 25px;" {% if Url.site('auth/enter')==nofollowlink%}class="active"{% endif %}>{{ "Войти"|i18n }}</span>
                </div>
            </a>
            <a href="{{ Url.site('auth/register') }}" {% if Url.site('auth/register')==nofollowlink%}rel="nofollow"{% endif %}>
                <div {% if Url.site('auth/register')==nofollowlink%}class="sign-up pull-right active" rel="nofollow" {% else %} class="sign-up pull-right"{% endif %}>
                    <span style="padding: 0 0 0 25px;" {% if Url.site('auth/register')==nofollowlink%}class="active"{% endif %}>{{ "Регистрация"|i18n }}</span>
                </div>
            </a>
        {% else %}
            {#<a class="link" href="{{ Url.site('profile') }}" {% if Url.site('profile')==nofollowlink%}rel="nofollow"{% endif %}>#}
            <span>{{ _user.username }}</span>
            {#</a>#}
            <div class="pull-right">
                <form action="{{ Url.site('auth/logout') }}" method="POST" id="logout-form">
                    <input type="hidden" name="token" value="{{ _token }}" />
                    <a class="link" href="#" id="logout-link">{{ "Выйти"|i18n }}</a>
                    <script>
                        $('#logout-link').on('click', function(){
                            $('#logout-form').submit();
                        });
                    </script>
                </form>
            </div>
        {% endif %}
    </div>
</div>